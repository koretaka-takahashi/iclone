<%= form_with(model: @feed, local: true, url: choose_index_or_edit ) do |form| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>    
      </ul>
    <div>
  <% end %>
  
  <div class="field">
    <%= image_tag(@feed.image.url) if @feed.image.url %>
    <%= form.file_field :image, class: "file_field" %>
    <%= form.hidden_field :image_cache %>
    <%= form.text_area :text %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>  