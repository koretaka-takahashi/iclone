<%= form_with(model: @user, local: true, url: choose_new_or_edit) do |f| %>
  <%= f.label :お名前 %>
  <%= f.text_field :name %>

  <%= f.label :メールアドレス %>
  <%= f.text_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>

  <%= f.label :パスワード確認用 %>
  <%= f.password_field :password_confirmation %><br>
  
  <%= f.label :プロフィール写真 %>
  <%= f.file_field :profile_image, class: "file_field" %>

  <%= f.submit "送信" %>
<% end %>