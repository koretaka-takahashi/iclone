<h1>SIGN UP</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_comfirmation %>
  <%= f.text_field :password_comfirmation %>

  <%= f.submit "CREATE MY ACCOUNT" %>
<% end %>
