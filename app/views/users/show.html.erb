<h3><%= notice %></h3>
<h3 class="alert"><%= alert %></h3>

<div class="profile">
  <span><%= image_tag @user.profile_image.url if @user.profile_image.url %></span>
  
  <% if logged_in? && current_user.id == @user.id %>
    <%= link_to 'プロフィール編集', edit_user_path, class: "btn btn-default" %>
  <% end %>  

  <h2><%= @user.name %>さんのプロフィールページ</h2>

  <% if logged_in? && current_user.id == @user.id %>
    <h2><%= link_to 'お気に入りへ', favorites_path, class: "btn btn-default" %></h2>
    <h4 class="email">メールアドレス <%= @user.email %></h4>
  <% end %>
  
  <h3><%= @user.name %>さんのfeed</h3>
</div>

<div class="index">
  <% @user.feeds.each do |feed| %>
    <span class="image"><%= link_to image_tag(feed.image.url), feed_path(feed.id) %></span>
  <% end %>
</div>